# URL to access the application
BASE_URL=http://localhost:8080

# required if BASE_URL is not https
SECURE=false

# used to sign cookies
COOKIE_SECRET=some-secret

STARDOG_INTERNAL_ENDPOINT=http://host.docker.internal:5820
STARDOG_EXTERNAL_ENDPOINT=http://localhost:5820

# allow users to sign in with Stardog username/password
PASSWORD_AUTH_ENABLED=true

# modify the name of the application for the login form
FRIENDLY_NAME=Stardog Applications

#  Create a new google application and generate a oauth id
#  https://developers.google.com/identity/protocols/oauth2
GOOGLE_AUTH_ENABLED=true
GOOGLE_CLIENT_ID=some-sort-of-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=client-secret

# A public/private RSA key pair used to sign/verify JWT's issued by Launchpad
JWK_LOCATION=/jwk
